//- main.pug
main
  h1 Lookup Steam User Info
  if steamid
    input#steamid.steamid(type="text" value=steamid)
  else
    input#steamid.steamid(type="text" placeholder="User's Steam Id")
  input.submit(type="button" value="Get Steam Wishlist" onclick="return getWishlistClick()")
  input.submit.bright(type="button" value="Get Steam Games List" onclick="return getGamesListClick()")

  include info.pug

  if steamid
    include featured-games.pug

script.
  const inputField = document.querySelector("#steamid");
  if (inputField) {
    inputField.addEventListener("keydown", function(e) {
      if (inputField.value && inputField.value.length > 0) {
        if (e.keyCode === 13) {
          return getWishlistClick();
        }
      }
    });
  }